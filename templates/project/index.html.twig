{% extends 'base.html.twig' %}

{% block title %}Project index{% endblock %}

{% block body %}

<nav>
    <div class="nav-wrapper container row">
        <div class="col s12">
            <a href="{{ path('project_index') }}" class="breadcrumb">Mes projets</a>
        </div>
    </div>
</nav>

<div class="container">
    <div class="row">
        <div class="col s12">

            <h1>Mes projets</h1>

            <table class="table">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for project in projects %}
                    <tr>
                        <td>{{ project.name }}</td>
                        <td>
                            <a href="{{ path('project_show', {'id': project.id}) }}">show</a>
                            {# <a href="{{ path('project_edit', {'id': project.id}) }}">edit</a> #}
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="3">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

            <a class="btn" href="{{ path('project_new') }}">Create new</a>

        </div>
    </div>
</div>
    
{% endblock %}
