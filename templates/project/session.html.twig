{% extends 'base.html.twig' %}

{% block body %}

    <nav>
        <div class="nav-wrapper container row">
            <div class="col s12">
                <a href="{{ path('project_index') }}" class="breadcrumb smooth"><i class="material-icons left">folder</i>Mes projets</a>
                <a href="{{ path('project_show', { id: project.id }) }}" class="breadcrumb smooth">{{ project.name }}</a>
            </div>
        </div>
    </nav>

    <main class="wrapper timer-wrapper" style="background:{{ project.color }}">

        <div class="background-mountains"></div>

        <div class="main-content scene_element scene_element--fadein">

            <div class="header">
                <h1 class="white-text">{{ project.name }}</h1>
            </div>

            <div>
                <div id="timer">
                    <div class="timer-zone"><input class="z-depth-5" type="number" id="hours" value="00" min="0"><div class="timer-zone-label">H</div></div> 
                    <div class="timer-zone"><input class="z-depth-5" type="number" id="minutes" value="00" min="0" max="59"><div class="timer-zone-label">M</div></div> 
                    <div class="timer-zone"><input class="z-depth-5" type="number" id="seconds" value="00" min="0" max="59"><div class="timer-zone-label">S</div></div> 
                </div>
            </div>

            <div class="timer-actions">
                <button id="toggle-btn" class="btn btn-large">Start</button>
                <button id="finish-btn" class="btn btn-large" data-id="{{ project.id }}"><i class="material-icons left">check</i>Finish session</button>
            </div>

        </div>

    </main>

{% endblock %}
