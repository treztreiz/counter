{% block gradient_widget %}

    <div style="display:none">{{form_widget(form)}}</div>
    <div class="circle-input circle circle-color modal-trigger z-depth-5" href="#modal-color-{{form.vars.id}}"></div>

    <!-- Modal Structure -->
    <div id="modal-color-{{form.vars.id}}" class="modal modal-color">
        <div class="modal-content">

            <h4>Couleur du projet</h4>

            <span class="modal-close"><i class="material-icons">close</i></span>
            
            <div class="row">
